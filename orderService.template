AWSTemplateFormatVersion: 2010-09-09
Description: "order service template for use with jenkins"
Parameters:
  ImageURL:
    Type: String
  BaseStackName:
    Type: String
Resources:
  OrderServiceLogGroup:
    Type: AWS::Logs::LogGroup
    Properties:
      RetentionInDays: 3
      LogGroupName: OrderServiceGroup
  TaskRole:
    Type: AWS::IAM::Role
    Properties:
      AssumeRolePolicyDocument:
        Version: 2012-10-17
        Statement:
          - Effect: Allow
            Principal:
              Service:
                - ec2.amazonaws.com
                - ecs.amazonaws.com
                - ecs-tasks.amazonaws.com
            Action:
              - "sts:AssumeRole"
      Path: /
      ManagedPolicyArns:
        - "arn:aws:iam::aws:policy/service-role/AmazonECSTaskExecutionRolePolicy"
        - "arn:aws:iam::aws:policy/AmazonECS_FullAccess"
      Policies:
        - PolicyName: AccessECR
          PolicyDocument:
            Version: 2012-10-17
            Statement:
              - Effect: Allow
                Action:
                  - "ecr:BatchGetImage"
                  - "ecr:GetAuthorizationToken"
                  - "ecr:GetDownloadUrlForLayer"
                Resource: "*"
        - PolicyName: AccessSES
          PolicyDocument:
            Version: 2012-10-17
            Statement:
              - Effect: Allow
                Action:
                  - "ses:SendEmail"
                  - "ses:SendTemplatedEmail"
                  - "ses:SendRawEmail"
                  - "ses:SendBulkTemplatedEmail"
                Resource: "*"
  OrderTaskDefinition:
    Type: "AWS::ECS::TaskDefinition"
    Properties:
      ContainerDefinitions:
        - Name: OrderApp
          Cpu: 512
          Memory: 1024
          Image: !Ref ImageURL
          PortMappings:
            - ContainerPort: 8080
              HostPort: 8080
              Protocol: tcp
          Environment:
            - Name: SPRING_APPLICATION_JSON
              Value: >
                {
                  "spring":{
                      "datasource":{
                        "url":"jdbc:postgresql://{{resolve:secretsmanager:DBEndpoint}}:{{resolve:secretsmanager:DBPort}}/{{resolve:secretsmanager:DBName}}",
                        "username":"{{resolve:secretsmanager:DBUsername}}",
                        "password":"{{resolve:secretsmanager:DBPassword}}"
                      }
                  },
                  "jwt":{
                      "secret":"SECRET"
                  },
                  "server":{
                      "port":"8080"
                  }
                }
          LogConfiguration:
            LogDriver: awslogs
            Options:
              awslogs-group: !Ref OrderServiceLogGroup
              awslogs-stream-prefix: OrderService
              awslogs-region: !Ref "AWS::Region"
      Cpu: 512
      Memory: 1024
      NetworkMode: awsvpc
      RequiresCompatibilities:
        - FARGATE
      TaskRoleArn: !GetAtt TaskRole.Arn
      ExecutionRoleArn: !Sub "arn:aws:iam::${AWS::AccountId}:role/ecsTaskExecutionRole"
  OrderService:
    Type: "AWS::ECS::Service"
    Properties:
      Cluster: "{{resolve:secretsmanager:ECSClusterName}}"
      LaunchType: FARGATE
      DesiredCount: 1
      ServiceName: OrderService
      LoadBalancers:
        - ContainerName: OrderApp
          ContainerPort: 8080
          TargetGroupArn: "{{resolve:secretsmanager:UserTGArn}}"
      TaskDefinition: !Ref OrderTaskDefinition
      NetworkConfiguration:
        AwsvpcConfiguration:
          SecurityGroups:
            - "{{resolve:secretsmanager:ServiceSecurityGroup}}"
          Subnets:
            - "{{resolve:secretsmanager:PrivateSubnet1}}"
            - "{{resolve:secretsmanager:PrivateSubnet2}}"
  ListenerRule:
    Type: AWS::ElasticLoadBalancingV2::ListenerRule
    Properties:
      Actions:
        - Type: forward
          TargetGroupArn: "{{resolve:secretsmanager:UserTGArn}}"
      Conditions:
        - Field: path-pattern
          PathPatternConfig:
            Values:
              - /order/*
              - /orders/*
      Priority: 5
      ListenerArn: "{{resolve:secretsmanager:LBListenerARN}}"
